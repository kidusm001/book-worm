@{
    Layout = null;
}
@using bookworm.ViewModel;
@model RegisterViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign up</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="~/css/login.css" />
    <script src="https://kit.fontawesome.com/44489b1897.js" crossorigin="anonymous"></script>
    <script defer src="~/js/login.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script defer src="~/js/login-validation.js"></script>
</head>
<body>
    <div class="wrapper">
        <div class="right-container">
            <div class="illustration">
                <img src="~/images/signupIllustration.png" alt="" />
            </div>
        </div>
        <div class="left-container">
            <div class="login-container">
                <img src="~/images/logo-black.png" alt="Logo" />
                <h1>Get Started Now</h1>
                <p>Please enter your details</p>
                @if (TempData["Error"] != null)
                {
                    <div class="col-md-12 alert">
                        <span><b>Sorry!</b> - @TempData["Error"]</span>
                    </div>
                }
                <form asp-action="Register">
                    <div class="form-control">
                        <input asp-for="FullName" class="login-detail" />
                        <label asp-for="FullName" class=""></label>
                        <span asp-validation-for="FullName" class="validation-message"></span>
                    </div>

                    <div class="form-control">
                        <input asp-for="Email" class="login-detail" />
                        <label asp-for="Email" class=""></label>
                        <span asp-validation-for="Email" class="validation-message"></span>
                    </div>

                    <div class="form-control">
                        <input asp-for="Password" class="login-detail" id="password" />
                        <label asp-for="Password"></label>
                        <span asp-validation-for="Password" class="validation-message"></span>
                    </div>
                    <div class="form-control">
                        <input asp-for="ConfirmPassword" class="login-detail" />
                        <label asp-for="ConfirmPassword"></label>
                        <span asp-validation-for="ConfirmPassword" class="validation-message"></span>
                    </div>
                    

                    <button type="submit" class="btn">Sign up</button>


                </form>

               
            </div>
        </div>
    </div>

</body>
</html>
